<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="text">
      <div class="meta">
        {{user.username}} on {{format_date created_at}}
      </div>
      
      <input class="border" name="comment" type="text" data-id="{{id}}" value="{{comment_text}}" />
      <button type="button" class="edit-comment-btn mt-2 font-weight-normal" data-id="{{id}}">Edit</button>
      <button type="button" class="delete-comment-btn mt-2 font-weight-normal" data-id="{{id}}">Delete</button>
      
    </div>
  </section>
  {{/each}}
</div>

<script src="/javascript/edit-comment.js"></script>
<script src="/javascript/delete-comment.js"></script>
